# ====================
# API KEYS
# ====================

# OpenAI API Key (Required for background checks)
# Get it from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Custom Search API (Optional - for enhanced web search)
# Get it from: https://developers.google.com/custom-search/v1/overview
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_search_engine_id_here

# Public Records API (Optional - for enhanced public records lookup)
# Contact your API provider for access
PUBLIC_RECORDS_API_KEY=your_public_records_api_key_here

# ====================
# APPLICATION SETTINGS
# ====================

# Debug Mode (True/False)
# - Set to False in production
# - Enables detailed error messages and logging
DEBUG=True

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# - Controls the verbosity of application logs
LOG_LEVEL=INFO

# Cache Settings
# - Enable/disable caching of API responses
CACHE_ENABLED=True
CACHE_TTL=3600  # Cache time-to-live in seconds (1 hour)

# Rate Limiting
# - Maximum number of API calls per minute
RATE_LIMIT_PER_MINUTE=60
RATE_WINDOW=60   # Time window in seconds

# ====================
# WEB SERVER SETTINGS
# ====================

# Server Host and Port
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated origins, or '*' for all)
ALLOWED_ORIGINS=*

# ====================
# MISCELLANEOUS SETTINGS
# ====================

# Maximum number of results to return in searches
MAX_RESULTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ====================
# SECURITY SETTINGS
# ====================

# Secret Key (generate a strong random key for production)
SECRET_KEY=your-secret-key-here

# Session Settings
SESSION_COOKIE_SECURE=True  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True

# ====================
# FEATURE FLAGS
# ====================

# Enable/disable features
ENABLE_WEB_SEARCH=True
ENABLE_PUBLIC_RECORDS=True
ENABLE_CACHING=True

# ====================
# MONITORING
# ====================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# ====================
# MISCELLANEOUS
# ====================

# Timezone (e.g., 'UTC', 'America/New_York')
TIMEZONE=UTC

# Default locale
DEFAULT_LOCALE=en_US

# ====================
# DEPLOYMENT
# ====================

# Set to 'production' in production
ENVIRONMENT=development

# Number of worker processes (for Gunicorn)
WORKERS=4
