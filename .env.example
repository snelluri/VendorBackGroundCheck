# ====================
# API KEYS (Required)
# ====================

# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_search_engine_id_here

# Public Records API
PUBLIC_RECORDS_API_KEY=your_public_records_api_key_here

# ====================
# APPLICATION SETTINGS
# ====================

# Debug Mode
# Set to False in production
DEBUG=True

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Cache Settings (in seconds)
CACHE_TTL=3600  # 1 hour

# Rate Limiting
RATE_LIMIT=50    # Max API calls per minute
RATE_WINDOW=60   # Time window in seconds

# ====================
# WEB SERVER SETTINGS
# ====================

# Server Host and Port
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated origins, or '*' for all)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ====================
# SECURITY SETTINGS
# ====================

# Secret Key (generate a strong random key for production)
SECRET_KEY=your-secret-key-here

# Session Settings
SESSION_COOKIE_SECURE=True  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True

# ====================
# FEATURE FLAGS
# ====================

# Enable/disable features
ENABLE_WEB_SEARCH=True
ENABLE_PUBLIC_RECORDS=True
ENABLE_CACHING=True

# ====================
# MONITORING
# ====================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# ====================
# MISCELLANEOUS
# ====================

# Timezone (e.g., 'UTC', 'America/New_York')
TIMEZONE=UTC

# Default locale
DEFAULT_LOCALE=en_US

# ====================
# DEPLOYMENT
# ====================

# Set to 'production' in production
ENVIRONMENT=development

# Number of worker processes (for Gunicorn)
WORKERS=4
